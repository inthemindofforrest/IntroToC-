<Window x:Class="WpfTool.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTool"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="165" Width="300" Background="White">
    <Grid>
        <TextBlock x:Name="ErrorText" HorizontalAlignment="Left" Margin="10,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="272" TextAlignment="Center" Text="Error Message" Foreground="#FFA40000"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="109,103,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>


    </Grid>
</Window>
