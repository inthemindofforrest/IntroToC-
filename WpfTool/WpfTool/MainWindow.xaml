<Window x:Class="WpfTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900
        ">
    <Grid x:Name="GridSystem">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="662*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Height="550" Margin="10,10,0,0" VerticalAlignment="Top" Width="872" Grid.ColumnSpan="4">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <TabControl HorizontalAlignment="Left" Height="498" Margin="10,10,0,0" VerticalAlignment="Top" Width="842">
                        <TabItem Header="TabItem">
                            <Grid Background="#FFE5E5E5">
                                <ListBox HorizontalAlignment="Left" Height="456" Margin="10,10,0,0" VerticalAlignment="Top" Width="269"/>
                                <TextBlock x:Name="Item_Name" HorizontalAlignment="Left" Margin="430,10,0,0" TextWrapping="Wrap" Text="Item" VerticalAlignment="Top" Height="31" Width="202" TextAlignment="Center" FontSize="20"/>
                                <Button Content="Button" HorizontalAlignment="Left" Margin="360,418,0,0" VerticalAlignment="Top" Width="156" Height="48" Click="CreateItems"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem" Margin="-2,-2,-2,-1">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Create" Margin="-2,-2,-2,-1">
                <TabControl HorizontalAlignment="Left" Height="498" Margin="10,10,0,0" VerticalAlignment="Top" Width="842">
                    <TabItem Header="TabItem">
                        <Grid Background="#FFE5E5E5">
                            <ListBox HorizontalAlignment="Left" Height="456" Margin="10,10,0,0" VerticalAlignment="Top" Width="269"/>
                            <TextBlock x:Name="Item_Name1" HorizontalAlignment="Left" Margin="430,10,0,0" TextWrapping="Wrap" Text="Item" VerticalAlignment="Top" Height="31" Width="202" TextAlignment="Center" FontSize="20"/>
                            <Button Content="Save" HorizontalAlignment="Left" Margin="171,433,0,0" VerticalAlignment="Top" Width="108" Height="33"/>
                            <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,433,0,0" VerticalAlignment="Top" Width="108" Height="33"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
